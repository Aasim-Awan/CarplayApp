<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/backgroundofsign">
            <!-- Sign Image -->
            <ImageView
                android:id="@+id/service_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="12dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <!-- Sign Title -->
            <TextView
                android:id="@+id/sign_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/gray_light" />

            <!-- Sign Description -->
            <TextView
                android:id="@+id/sign_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec euismod, nisl eget consectetur gravida."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sign_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:text="Usage: Used to indicate stopping is required."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Sign Rules -->
            <TextView
                android:id="@+id/sign_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:text="Rules: Stop completely before proceeding."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Country-Specific Notes -->
            <TextView
                android:id="@+id/sign_country_specific_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:text="Country Notes: Common in North America."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Penalties -->
            <TextView
                android:id="@+id/sign_penalties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:text="Penalties: Fine of up to $200."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Tips -->
            <TextView
                android:id="@+id/sign_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:text="Tips: Always come to a full stop."
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <!-- Related Signs -->
            <TextView
                android:id="@+id/sign_related"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="4dp"
                android:text="Related Signs: Yield, Speed Limit."
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
